{
  "manifest_version": 3,
  "name": "Selection Character Count",
  "version": "1.0",
  "description": "Displays the character count of the selected text.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "type": "module"
    }
  ]
}
